    "level": "info"
  },
  "inbounds": [
    {
      "type": "shadowsocks",
      "tag": "ss-in",
      // 关键点：只监听 IPv4 地址
      "listen": "0.0.0.0",
      "listen_port": 3333,
      "method": "aes-256-gcm",
      "password": "123456"
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct",
      // 关键点：服务器访问外网时也强制只走 IPv4
      "domain_strategy": "ipv4_only"
    }
  ]
}
