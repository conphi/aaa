/opt/lampp/bin/mysqladmin -u root -p create paper

/opt/lampp/bin/mysql paper< /opt/paper.sql

/opt/lampp/bin/mysql
mysql> SET PASSWORD FOR root@'localhost'=PASSWORD('wAtsg+');
exit
/opt/lampp/lampp restart

